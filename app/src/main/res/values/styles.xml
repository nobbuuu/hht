<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BookItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_22</item>
    </style>
    <!--<style name="BookVersionStyle">-->
    <!--<item name="android:layout_width">wrap_content</item>-->
    <!--<item name="android:layout_height">wrap_content</item>-->
    <!--<item name="android:textColor">@color/white</item>-->
    <!--<item name="android:textSize">@dimen/size_22</item>-->
    <!--</style>-->
    <!--<style name="CheckedStyle">-->
    <!--<item name="android:layout_width">wrap_content</item>-->
    <!--<item name="android:layout_height">wrap_content</item>-->
    <!--</style>-->

    <style name="MainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_subject_choose</item>
        <item name="android:textSize">@dimen/size_28</item>

    </style>
    <style name="SubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/size_24</item>
    </style>

    <style name="ProgressTheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/download_progress</item>
        <item name="android:minHeight">@dimen/dimen_54</item>
        <item name="android:maxHeight">@dimen/dimen_54</item>

    </style>


    <style name="Nav_Tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/size_16</item>
<!--        <item name="android:textColor">@drawable/selector_nav_tab_textcolor</item>-->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/dimen_25</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
    </style>

    <style name="ProgressTheme2" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_progress</item>
        <item name="android:minHeight">@dimen/dimen_32</item>
        <item name="android:maxHeight">@dimen/dimen_32</item>

    </style>
    <style name="circleProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_circle_progress</item>
    </style>

</resources>
