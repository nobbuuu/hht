<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="@dimen/dimen_526"
        android:layout_height="@dimen/dimen_230"
        android:paddingLeft="@dimen/dimen_31"
        android:paddingRight="@dimen/dimen_31"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_bg">
        <TextView
            style="@style/SubText"
            android:textSize="@dimen/size_22"
            android:text="@string/dialog_set_path_title"
            android:layout_marginTop="@dimen/dimen_40"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/shape_set_path_dialog_button_bg">
            <TextView
                android:id="@+id/tvPath"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_folder"
                android:drawablePadding="@dimen/dimen_11"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_16"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/size_24"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxLines="1"
                tools:text="系统/设置/下载文件"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/color_d4d4d4"
               />
            <TextView
                android:id="@+id/tvChoosePath"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_24"
                android:text="@string/dialog_set_path_text"
                android:gravity="center"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ibConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ok"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_24"/>
    </LinearLayout>

</LinearLayout>