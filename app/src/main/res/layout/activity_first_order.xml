<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_bg_clear"
    tools:context=".ui.book2.FirstOrderActivity">

    <ImageView
        android:id="@+id/runFinSh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_40"
        android:src="@mipmap/ic_back" />

    <RelativeLayout
        android:id="@+id/first_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/img_title"
        android:layout_marginTop="@dimen/dimen_40">

        <TextView
            android:id="@+id/firstTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一阶-激发兴趣"
            android:textColor="#A1580D"
            android:textSize="@dimen/size_18"
            android:textStyle="bold"
            android:includeFontPadding="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_title"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_49"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_12"
        android:background="@mipmap/img_cube">

        <!--        　　android:scrollbarThumbVertical="@color/grey"-->
        <com.booyue.view.xrecyclerview.HHTRecyclerView
            android:id="@+id/first_top_recycleView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_45"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_marginBottom="@dimen/dimen_75"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="7dp"
            android:scrollbarThumbVertical="@drawable/gundongtiao"
            android:scrollbarTrackVertical="@drawable/gundongtiao_bg"
            android:scrollbars="vertical" />


    </LinearLayout>

</RelativeLayout>