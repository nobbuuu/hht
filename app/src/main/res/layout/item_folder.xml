<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_66"
    android:id="@+id/llContainer"
    >
    <TextView
        android:id="@+id/tvFolderName"
        style="@style/MainText"
        android:layout_width="@dimen/dimen_0"
        android:layout_weight="1"
        android:textSize="@dimen/dimen_22"
        android:drawableLeft="@drawable/icon_folder"
        android:drawablePadding="@dimen/dimen_9"
        android:text="@string/app_name"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_30"/>

    <CheckBox
        android:id="@+id/cbCheck"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="match_parent"
        style="@style/SubText"
        android:button="@null"
        android:paddingLeft="@dimen/dimen_14"
        android:drawableLeft="@drawable/selector_folder_check"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_15"/>
</LinearLayout>