<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/rlUnit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30"
        android:visibility="visible"
        android:background="@color/color_f7f7f7">

        <TextView
            android:id="@+id/tvUnitName"
            style="@style/MainText"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_20"
            tools:text="@string/app_name" />

        <CheckBox
            android:id="@+id/cbUnitCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_book_video_check"
            android:checked="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_15">

        <TextView
            android:id="@+id/tvNum"
            style="@style/MainText"
            android:layout_marginLeft="@dimen/dimen_30"
            android:text="1"
            android:textSize="@dimen/size_22" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_weight="1"
            android:text="福建省肯德基首付款是是大"
            android:textColor="@color/text_color_subject_choose"
            android:textSize="@dimen/size_22" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/downloaded"
            android:textColor="@color/color_downloaded"
            android:textSize="@dimen/size_20"
            android:layout_marginLeft="@dimen/dimen_15"
            android:visibility="gone"
            />

        <CheckBox
            android:id="@+id/cbCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_30"
            android:button="@drawable/selector_book_video_check"
            android:checked="false" />
    </LinearLayout>
</LinearLayout>
