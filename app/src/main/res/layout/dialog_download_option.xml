<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dimen_688"
        android:layout_height="@dimen/dimen_488"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_88"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGrade"
                style="@style/MainText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_30"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/tvVersion"
                style="@style/SubText"
                android:layout_width="@dimen/dimen_0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_weight="1"
                android:textSize="@dimen/size_22" />

            <TextView
                android:id="@+id/tvCheckAll"
                style="@style/MainText"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="@string/text_check_all"
                android:textSize="@dimen/size_22" />
        </LinearLayout>

        <com.booyue.view.xrecyclerview.HHTRecyclerView
            android:id="@+id/hhtSwipeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300"></com.booyue.view.xrecyclerview.HHTRecyclerView>

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_16"
            android:background="@drawable/btn_download" />

    </LinearLayout>
</FrameLayout>