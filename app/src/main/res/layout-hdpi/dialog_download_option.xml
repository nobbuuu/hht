<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    android:layout_width="@dimen/dimen_548"-->
    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="@dimen/dimen_422"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_58"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGrade"
                style="@style/MainText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20"
                tools:text="@string/app_name"
                android:textSize="@dimen/size_18"  />

            <TextView
                android:id="@+id/tvVersion"
                style="@style/SubText"
                android:layout_width="@dimen/dimen_0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:textSize="@dimen/size_22" />

            <TextView
                android:id="@+id/tvCheckAll"
                style="@style/MainText"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_20"
                android:text="@string/text_check_all"
                android:textSize="@dimen/size_14" />
        </LinearLayout>

        <com.booyue.view.xrecyclerview.HHTRecyclerView
            android:id="@+id/hhtSwipeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300"></com.booyue.view.xrecyclerview.HHTRecyclerView>

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="@dimen/dimen_94"
            android:layout_height="@dimen/dimen_36"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/btn_download" />

    </LinearLayout>
</FrameLayout>