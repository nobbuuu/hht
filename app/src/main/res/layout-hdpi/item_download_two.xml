<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_layout"
        android:layout_marginTop="@dimen/dimen_2"
        android:layout_marginBottom="@dimen/dimen_2"
        android:layout_marginRight="@dimen/dimen_15"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                style="@style/NewMainText"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tvParentPath"
                style="@style/MainText"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="@string/app_name"
                android:textSize="@dimen/size_16"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvSize"
                style="@style/NewSubText"
                android:text="@string/size"
                android:textSize="@dimen/size_12"
                android:layout_marginTop="@dimen/dimen_3"
                android:layout_marginBottom="@dimen/dimen_2"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20">
            <com.booyue.poetry.view.DownloadNewButton
                android:id="@+id/downloadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.booyue.poetry.view.DownloadNewButton>

            <ImageView
                android:id="@+id/icDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"/>
            <CheckBox
                android:id="@+id/cdeUnitCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/delete_book_video_check"
                android:checked="false"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvComplete"
                style="@style/SubText"
                android:text="@string/button_text_download_complete"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>